<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Flashcard.Card" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/app_black</item>
        <item name="strokeColor">@color/app_grey</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="rippleColor">@color/app_grey</item>
        <item name="android:layout_margin">30dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:padding">15dp</item>
    </style>

    <!-- orange -->
    <style name="Widget.Flashcard.Card.Orange" parent="Widget.Flashcard.Card">
        <item name="cardBackgroundColor">@color/app_orange</item>
        <item name="strokeColor">@color/app_black</item>
    </style>

    <style name="TextAppearance.Flashcard.Radio" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter_extbold</item>
    </style>

    <style name="Widget.Flashcard.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="useMaterialThemeColors">false</item>

        <item name="buttonTint">@color/rb_tint</item>
        <item name="android:buttonTint">@color/rb_tint</item>
        <item name="android:textColor">@color/app_white</item>

        <item name="android:textAppearance">@style/TextAppearance.Flashcard.Radio</item>
        <item name="android:gravity">center_vertical</item>

        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>
</resources>