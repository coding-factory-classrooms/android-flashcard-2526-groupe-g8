<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base style for btn-->
    <style name="Widget.Flashcard.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="backgroundTint">@color/app_orange</item>
        <item name="android:textColor">@color/app_black</item>
        <item name="rippleColor">@color/app_grey</item>
        <item name="strokeColor">@color/app_orange</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <!-- SECONDARY-->
    <style name="Widget.Flashcard.Button.Secondary" parent="Widget.Flashcard.Button.Primary">
        <item name="backgroundTint">@color/app_black</item>
        <item name="android:textColor">@color/app_orange</item>
        <item name="strokeColor">@color/app_orange</item>
    </style>

    <!-- OUTLINE -->
    <style name="Widget.Flashcard.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/app_orange</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/app_orange</item>
    </style>

    <!-- THIRD-->
    <style name="Widget.Flashcard.Button.Tonal" parent="Widget.Material3.Button.TonalButton">
        <item name="backgroundTint">@color/app_grey</item>
        <item name="android:textColor">@color/app_white</item>
    </style>
</resources>
